<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" >

    {% include 'WebBundle:_common:metatags.html.twig' %}

    <!-- inicio favicon  iphone retina, ipad, iphone en orden-->
    <link rel="icon" type="image/png" href="{{ asset('static/img/favicon/256x256.png') }}"/>
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('static/img/favicon/114x114.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('static/img/favicon/72x72.png') }}">
    <link rel="apple-touch-icon-precomposed" href="{{ asset('static/img/favicon/57x57.png') }}">
    <!-- end favicon -->

    {% block cssadicional %}
    {% endblock %}
    {% set BUILD_ID = '1.01' %}

    <!-- CSS librerias cpal-static -->
    <link rel="stylesheet" href="{{ asset('static/js/owl-carousel/owl.carousel.css') }}">
    <link rel="stylesheet" href="{{ asset('static/js/boxlight/boxlight.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('static/css/styles.css?v=1') }}{{ BUILD_ID }}"/>
    <link rel="stylesheet" href="{{ asset('static/js/validationEngine.jquery.css') }}" type="text/css"/>
    <!-- end CSS -->

    <!--[if lt IE 9]>
        <script src="{{ asset('static/js/html5.js') }}"></script>
        <script src="{{ asset('static/js/respond.js') }}" type="text/javascript"></script>
        <link rel="stylesheet" type="text/css" href="{{ asset('static/css/ie.css') }}"/>
    <![endif]-->
</head>

<body class="{% block classbody %}{% endblock %}">

    <!-- html solo para el menu responsive -->
    <!-- <div  class="menu-mobile-open icon-menu"></div> -->
    <div class="menu-mobile-close icon-close"></div>
    <div class="menu-overlay"></div>
    <!-- html solo para el menu responsive -->

    <div class="cnt-wrapper">
        <div class="wrapper">
            <!-- HEADER START -->
            {% include 'WebBundle:_common:_header.html.twig' %}
            <!-- HEADER END -->

            <!-- CONTENT START -->
            {% block content %}{% endblock %}
            <!-- CONTENT END -->
        </div>
    </div>

    <!-- FOOTER START -->
    {% include 'WebBundle:_common:_footer.html.twig' %}
    <!-- FOOTER END -->

    <!-- contenedor del menu responsive -->
    <div class="menu-sidebar">
        <div class="menu-sidebar-cnt"></div>
    </div>

    <!-- Librerias reuzables cpal-static -->
    <script src="{{ asset('static/js/jquery1.8.3.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('static/js/jquery.placeholder.js') }}" type="text/javascript"></script>
    <script src="{{ asset('static/js/main.js') }}" type="text/javascript"></script>
    <script type="text/javascript" src="{{ asset('static/js/owl-carousel/owl.carousel.js') }}"></script>
    <script type="text/javascript" src="{{ asset('static/js/boxlight/boxlight.js') }}"></script>
    <script src="{{ asset('static/js/jquery.validationEngine.js') }}"></script>
    <script src="{{ asset('static/js/jquery.validationEngine-es.js') }}"></script>
    <!-- end library-->

    <!-- JSADD START -->
    {% block jsfinal %}{% endblock %}
    <!-- JSADD END -->

    <script type="text/javascript">
        $(".btn-search-buscador").click(function(e){
            e.preventDefault();
            valid = $(".btn-search-buscador").closest("form").validationEngine('validate');

            if (valid) {
                busqueda = $("#busqueda").val().trim();
                window.location.href = "/busqueda/"+busqueda+"/";
            }
        });
    </script>
</body>
</html>