    <script type="text/javascript">

        $(document).ready(function() {
            $("form").validationEngine('attach', {
                promptPosition : "topLeft",
                autoHidePrompt: true,
                autoHideDelay: 4000,
                binded: false,
                scroll: false,
                validateNonVisibleFields: true
            });

            $(".btn-buscador").click(function(e){
                e.preventDefault();
                valid = $(".btn-buscador").closest("form").validationEngine('validate');

                if (valid) {
                    busqueda = $("#busqueda").val().trim();
                    console.log(busqueda)
                    location.href = "/colegio-fernando-wiese/busqueda/"+busqueda+"/";
