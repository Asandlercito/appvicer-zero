.b17
	margin-top 50px
	@media screen and (max-width 1024px)
		margin-top 30px
	@media screen and (max-width 768px)
		margin-top 20px
.b17-content
	h3 
		font-family t-0
		font-size 21px
.b17-p
	margin-top 20px
	font-family t-10
	font-size 13px
	color c-9
	line-height 1.8
	text-align justify
		
.b17-figure
	img
		display block
		max-width 100%
		height auto
.b17-tittle
	margin-bottom 15px
	h3
		color c-1
	&.pink
		h3 
			color #b44fe9

.b17-subtittle
	h3
		font-size 22px
		color c-9
		line-height 1.2
	@media screen and (max-width 768px)
		h3 
			font-size 18px
			margin-bottom 0
			

@media screen and (max-width 480px)
	.b17
		text-align center

@media print
	.header, .footer, .b26, .b33-ultimo, .b19-cuadro.pink h3, .b19-lista
		display none
	
	.wrapper
		margin-top 0