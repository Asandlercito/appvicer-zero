.b4
	font-size 0
	padding-top 10px
	.g-tittle h3
		color #5b5b5f
	.g-tittle h3:before
		background #5b5b5f
		
	.owl-item
		.b4-item
			width auto
			display block
			margin-left 0
			
	.owl-dots		
		text-align center
		padding 25px 0
	.owl-dot
		display inline-block
		vertical-align top
		width 18px
		height 18px
		border-radius 100%
		background-color #d8dade
		margin-left 10px
		&.active
			background-color #5d5d5d
		

.b4-item
	width 32.333333%
	height 100%
	position relative
	margin-top 35px
	margin-left 1.5%
	display inline-block
	vertical-align top
	&:after
		content ""
		background url(../img/b4-sombra.png) center center no-repeat
		width 100%
		height 100%
		top 0
		right 0
		bottom 0
		left 0
		margin auto
		position absolute
		opacity .7
		background-size cover
	img
		display block
		max-width 100%
		height auto
		width 100%

	&:before
		content ""
		top 0
		right 0
		width 100%
		height 0%
		position absolute
		background: rgba(19,19,19,0.5)
		z-index 1
		transition-all()
	&:hover, &.active
		&:before
			background #2388E2
			height 100%
		.b4-texto
			opacity 0
		.caja-hover
			opacity 1
		.caja-centro
			transform scale(1)

.b4-texto
	color #fff
	font-family t-2
	font-size 20px
	position absolute
	bottom 32px
	left 5%
	line-height 28px
	z-index 1
	p 
		margin-bottom 0

.caja-hover
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	opacity 0
	font-size 0
	text-align: center
	z-index 2
	&:before
		content ""
		width 0
		height 100%
		display inline-block
		vertical-align middle
	.caja-centro
		max-width 389px
		display inline-block
		vertical-align middle
		box-sizing border-box
		transform scale(0)
		transition-all()
		.g-tittle h3
			font-family t-0
			font-weight  normal
			color #ffff
			font-size 14px
			line-height 1.2
		.g-tittle h3:before
			background-color #fff

.b4-bnt
	margin-top 40px
	.g-bnt
		width 96px
		font-size 12px
	.g-bntdos
		margin auto
		height 33px
		line-height 33px
		font-size 14px
		border 1px solid #fff
		color white
		padding 0 15px
		&:hover
			color c-4
.active
	margin-left: 0


@media screen and (max-width 1200px)
	.b4-texto
		font-size 18px


@media screen and (max-width 1024px)
	.b4-texto
		font-size 16px
		text-align center
		left 0
		
	.caja-hover
		.caja-centro .g-tittle h3
			font-size 14px



