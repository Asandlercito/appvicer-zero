.b26
	position relative
	z-index 1
	height 290px
	.wancho
		display table
		max-width 1000px
		position relative
		z-index 2

	&.anima
		.b26-title
			@media screen and (min-width 1025px)
				endscale()
.b26-item
	background-position top center
	background-size cover
	background-repeat no-repeat
	width 100%
	height 100%
	position relative
.b26-sobra
	background-image linear-gradient(to bottom, rgb(255, 255, 255) 0%, rgb(5, 5, 5) 50%)
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	opacity 0.3
.b26-title
	text-align left
	// padding-left 73px
	padding-left 0px
	color white
	display table-cell
	vertical-align middle
	height 290px
	h3
		// font-size 43px
		font-size 28px
		text-align left
		line-height 1
		position relative
		&:before
			content ""
			position absolute
			bottom -15px
			display inline-block
			width 36px
			height 7px
			background-color white
			right 0
			left inherit
	@media screen and (min-width 1025px)
		movescale(0)

@media screen and (max-width:768px)
	.b26
		height 250px
	.b26-title
		padding-left 10px
		height 250px
		h3
			font-size 33px
			&:before
				width 26px
				right 0
				height 4px