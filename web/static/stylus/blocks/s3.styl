.b3
	font-size 0
	padding-top 50px
	.g-tittle
		margin-bottom 45px
		h3 
			color #5b5b5f
					
			&:before
				background-color #5b5b5f
	.g-bnt
		margin auto

	.owl-item
		.b3-col
			max-width 100%
			width auto
			display block
			margin-left 0
		.b3-item, .b3-item1	
			max-width none 
			display block
			
	.owl-dots		
		text-align center
		padding 25px 0
		padding-top 0
		display none
	.owl-dot
		display inline-block
		vertical-align top
		width 18px
		height 18px
		border-radius 100%
		background-color #d8dade
		margin-left 10px
		&.active
			background-color #5d5d5d

	.owl-nav		
		position absolute
		top 45%
		width 100%
	.owl-prev, .owl-next
		position absolute
		width 25px
		height 45px
		top 0
		cursor pointer
		&:after
			display inline-block
			font-family icomoon
			color #5b5b5f
			font-size 40px
		
	.owl-prev
		right 102%
		&:after
			content "\e92e"	
	
	.owl-next
		left 102%
		&:after
			content "\e92f"	
			
		
					

.b3-item, .b3-item1
	max-width 334px
	position relative
	vertical-align top
	&:first-child
		margin-bottom 7.5%
.b3-figura
	position relative
	img
		height auto 
		max-width 100%
		display block
		
.b3-footer
	box-sizing border-box
	position absolute
	width 100%
	background-color rgba(239,142,0,.9)
	height 72px
	text-align left
	left 0px
	bottom -1px
	padding 10px 10px 0 18px
	box-sizing border-box
	overflow hidden
	p
		color c-24
		font-family t-0
		font-size 15px
		// padding-top 10px
		margin-bottom 0
		line-height 1.2
		// padding-left 20px
		// margin-right 115px
.b3-hover
	background-color c-1
	color c-24
	width 100%
	height 100%
	display block
	box-sizing border-box
	text-align center
	position absolute
	top 0
	opacity 0
	font-size 0
	text-align left
	a
		color c-24
		margin auto
		height 33px
		line-height 33px
		font-size 12px
		border 1px solid white
		padding 0 15px
	&:hover 
		opacity 1
		transition 250ms linear
	&:before
		content ''
		width 0
		height 100%
		display inline-block
		vertical-align middle
.b3-info
	display inline-block
	vertical-align middle
	padding-left 25px
	padding-right 10px
	p
		font-size 14px
		font-family t-0
.b3-item-slider
	display inline-block
	&.active-large
		.b3-figura-bg
			padding-bottom 139.2%
			
			
