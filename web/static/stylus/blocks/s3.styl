.b3-figura-bg
	min-width 324px
	height 0
	padding-bottom 66%
	background-repeat no-repeat 
	background-size cover
	background-position center center
	
@media screen and (max-width 1200px)
	.b3 
		.owl-dots
			display block
		.owl-next, .owl-prev
			display none



@media screen and (max-width 1024px)
	.b3-footer
		padding 5px
		height auto
		line-height 18px
		&:before
			content "+"
			font-size 30px
			border 1px solid #fff
			border-radius 100%
			width 30px
			height 30px
			line-height 33px
			display inline-block	
			text-align center
			float left
			margin-right 5px
			color #fff
			
	.b3-hover
		display none
	
	.b3-info
		padding-top 5px
		line-height 18px
		p 
			margin-bottom 0
	
	.b3-info p
		font-size 14px
			

@media screen and (max-width 480px)

	.b3
		padding-top 25px
	.b3-footer 
		&:before
			margin-top 5px
			margin-left 10px
		p
			text-align center
	

