.b2
	font-size 0
	background-image url(../img/bg-b2.jpg)
	background-position center center
	background-size cover

.b2-item
	width 25%
	display inline-block
	vertical-align top
	position relative
	background-color rgba(0, 69, 150, 0.5)
	text-align center
	box-sizing border-box
	&:hover, &.active
		p
			color #ef8f00
		.b2-capa
			opacity 1
			&:before
				opacity 1
			&:after
				opacity 1

.b2-texto
	height 80px
	width 2000px
	text-align center
	display table-cell
	vertical-align middle
	position relative
	z-index 1
	line-height 26px
	padding 0 30px
	border-right .5px solid #c1bcbc
	&:last-child
		border-right none
	p
		font-family t-2
		font-size 17px
		color #fff
		margin 0
		line-height 1.1

.b2-capa
	width 100%
	height 100%
	background-color rgba(30, 18, 13, 0.2)
	position absolute
	top 0
	opacity 0
	&:before
		content ""
		width 25px
		height 25px
		position absolute
		border-top 1px solid #fff
		border-left 1px solid #fff
		top 12%
		left 3%
		opacity 0
	&:after
		content ""
		width 25px
		height 25px
		position absolute
		border-bottom 1px solid #fff
		border-right 1px solid #fff
		bottom 12%
		right 3%
		opacity 0

@media screen and (max-width 1200px)
	.b2-texto 
		height 70px
		line-height 20px
		p
			font-size 16px

@media screen and (max-width 960px)
	.b2-item
		width 50%
		border 1px solid #023a77
		box-sizing border-box
		&:nth-child(2),
		&:nth-child(4)
			border-right none
		
	.b2-texto
		width 2000px

@media screen and (max-width 480px)		
	.b2-item		
		width 100%
		display block
		&:nth-child(1),
		&:nth-child(2),
		&:nth-child(3),
		&:nth-child(4)
			border-right none
			border-bottom 1px solid white
			padding 5px 0
	
	.b2-texto 
		height 45px
		p
			display inline-block
			vertical-align top