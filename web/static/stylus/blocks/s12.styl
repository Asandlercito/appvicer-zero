.b12
	font-size 0
	background-position center center
	background-size cover
	background-repeat no-repeat
	text-align center
	padding-bottom 50px
	.g-tittle 
		h3
			padding-top 70px
			margin-bottom 40px
			&:before
				width 60px
				margin-bottom -5px
	.b12-title
		padding-left 0

.b12-item
	width 18%
	display inline-block
	vertical-align top
	margin-left 20px
	margin-bottom 20px
	&:first-child
		margin-left 0px
	h3
		font-family t-2
		font-size 21px
		color #43baf3
		line-height 1.3
		margin 0
	p
		font-family t-11
		font-size 14px
		color #5d5d5d
		margin-top 0px
		line-height 1.3

.b12-box
	width 104px
	height 104px
	text-align center
	border 6px solid #fff
	border-radius 50%
	background-color #43baf3
	box-sizing border-box
	margin auto
	transition-all()
	i
		content "\e923"
		font-size: 50px
		font-family icomoon
		line-height 90px
		color #fff
		transition-all()
	&:hover
		background-color #fff
		border 6px solid #fff
		i
			color #43baf3
			animation toTopFromBottom 0.25s forwards
.b12-table
	width 2000px
	height 80px
	display table-cell
	vertical-align middle
	text-align center
	

.enviar-amigo
	max-width 420px
	margin auto
	position relative
	left 0
	top 0
	background-color #fff
	padding 40px
	box-sizing border-box
	.close-boxlight
		border 0
		font-family cursive
	&.active
		position relative
		visibility visible
		margin auto

	h3
		font-family 'Conv_Poppins-Medium', sans-serif
		font-size 20px
		color #d61d71
		&:after
			content ""
			margin-top 2px
			width 25px
			background-color #d51c70
			display block
			height 2px
.enviar-input
	margin-top 20px
	text-align center
	placeholder( #d51c70,'Conv_Poppins-Medium', sans-serif)
	input, textarea
		width 100%
		line-height 40px
		height 40px
		background-color #edeef0
		padding 0 0 0 10px
		box-sizing border-box
		border 0
	textarea
		height 128px
		line-height 100%
		padding 10px 
		font-family 'Conv_Poppins-Medium', sans-serif
		color #d61d71
	button
		width 94px
		height 40px
		line-height 40px
		background none
		border 1px solid #d51c70
		color #d51c70
		font-family 'Conv_Poppins-Medium', sans-serif
		font-size 13px
		transition all 250ms ease-out
		display inline-block
		border-radius 0
		&:hover
			background-color #d51c70
			color #fff		

@media screen and (max-width 768px)
	.b12-item
		width 23%
		
@media screen and (max-width 600px)
	.b12-item
		width 36%
		margin 25px 20px 40px
		
@media screen and (max-width 480px)
	.b12
		padding-bottom 65px
	.b12-item
		margin 25px 0px 40px	
		// width 50%
		width 100%
		margin-bottom 0
		&:first-child
			// margin-left 25px
			margin-left 0px
		p
			margin 0
	.b12-title
		margin-bottom 0px
	.b12-table
		max-width 100%
		height auto
		display inline-block

@keyframes toTopFromBottom
	29%
		transform translateY(-100%)

	50%
		opacity 0
		transform translateY(100%)

	51%
		opacity 1

