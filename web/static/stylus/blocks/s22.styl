.b22
	margin-top 48px
	.wancho
		max-width 1024px
.b22-content
	img
		max-width 100%
		display block
		height auto
.b22-tittle
	h3
		text-align left
		font-family t-0
		color c-0
		font-size 22px
		margin-bottom 0px
		line-height 1.2
.b22-bloque
	display block
	font-size 0
	margin 35px 0px
.b22-b1
	width 45%
	display inline-block
	vertical-align middle
	p
		font-size 17px
		margin 0px
		color #7631a3
.b22-b2
	width 54%
	display inline-block
	background-color #7631a3
	vertical-align middle
	ul
		display block
		text-align center
		font-size 0
	li
		display inline-block
		margin 0px 10px
		color white
		i
			font-size 30px
.b22-b-p
	display inline-block
	text-align left
	margin-left 10px
	padding 20px 0px
.b22-subtittle
	font-size 17px
.b22-b-p
	h3
		margin 0px
	p
		font-family t-9
		font-size 12px
		margin 0px
.b22-parrafo
	margin-top 10px
	p
		font-family t-10
		font-size 13px
		line-height 20px
		
@media screen and (max-width 1075px)
	.b22-b2
		ul
			text-align left
		li 
			padding-left 20px
			box-sizing border-box
			margin 0px
			text-align: left;
			width 50%
			&:last-child
				width 100%
@media screen and (max-width 768px)
	.b22-b1
		width 100%
		margin-bottom 10px
	.b22-b2
		width 100%
	.b22-bloque
		margin 20px 0px
	.b22-tittle h3
		font-size 18px
	.b22
		margin 20px 0px
		
@media screen and (max-width 391px)
	.b22-b2
		li
			width 100%
			
@media screen and (max-width 480px)
	.b22-tittle
		h3
			text-align center
	.b22-parrafo
		text-align justify
		margin 0
	.b22-b2
		li
			width 235px
			display block
			margin-left auto
			margin-right auto
			text-align left
			&:last-child
				width 50%
				width 235px