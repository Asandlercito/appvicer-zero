// *
// 	outline  1px dotted skyblue 
.b13-wrapp-video 
	overflow hidden
	position relative
	&.active
		.w-video
			position relative
			opacity 1
			visibility visible
			z-index 100
.b13
	position relative
	margin-top -50px
	margin-bottom 30px
	.w-video
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		z-index 1
		visibility hidden
		opacity 0
		transition opacity .3s linear
	.w-videoinner
		position: relative;
		padding-bottom: 56.25%; /* 16:9 */
		padding-top: 25px;
		height: 0;

	.video-iframe
		background-color: gray
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	
	.w-video
		z-index 1
		.close-video
			width 35px
			height 35px
			border-radius 100%
			background-color: #FFF
			line-height 30px
			text-align center
			display block
			position absolute
			top 25px
			right 15px
			z-index 101
			font-size 30px
			cursor pointer
			&:after
				content "x"
				font-family: 'arial', sans-serif
.b13-texto
	display inline-block
	position absolute
	right 0
	left 0
	top 0
	width 100%
	text-align center
	height 22%
	bottom 0
	margin auto 
	
.b13-item
	background-position center center
	background-size cover
	background-repeat no-repeat
	min-height 396px
	width 100%
	position relative
	margin auto
	z-index 2
	
.b13-description
	display inline-block
	vertical-align middle
	position relative
	&:before
		 content ""
		 position absolute
		 display inline-block
		 background-color white
		 height 2px
		 width 30px
		 bottom -10px
		 left 0
	h2
		text-align left
		color white
		font-family t-2
		font-size 21px
		margin 0 
		padding-bottom 2px
	h3
		text-align left
		color c-13
		margin 0
		font-family t-2
		font-size 21px
.b13-iconplay
	font-size 85px
	color white
	display inline-block
	vertical-align middle
	height 85px
	width 85px
	
.w-play
	cursor pointer
	transition all .5s linear
	&.active
		display none
	&.anima
		animation opaciti 1s linear infinite alternate
.w-portada
	&.active
		opacity 0
		visibility hidden	
		display none 

@media screen and (max-width:765px)

	.b13-item
		width 100%
		min-height 250px
	.b13-description
		h2
			font-size 15px
			
		h3
			font-size 15px	

@media screen and (max-width:428px)
	.b13-description
		padding-top 15px
		h2
			font-size 15px
			text-align center
			
		h3
			font-size 15px	
			text-align center
	.b13-texto
		height 50%
		
	.b13-iconplay 
		margin-top -10px
		display block
		margin-bottom 0px