.b32
	background #EBBA16
	color white
	text-align center
	margin-top 50px
	padding-bottom 25px
	p
		margin 0
	.wancho
		position relative
		&:before
			content ""
			position absolute
			background #EBBA16
			top -20px
			left 0
			right 0
			height 20px
			border-radius 10px 10px 0 0

	.b32-texto,
	.b32-input,
	button
		display inline-block
		vertical-align middle

	button
		background transparent
		border 1px solid
		height 48px
		line-height 48px
		border-radius 30px
		text-align center
		margin-left 0
		font-size 15px
		font-family t-0
		color white
		padding 0px 40px
		margin-left 50px
		&:hover, &.active
			background #fff
			border 1px solid #fff
			color #004998

.b32-texto
	width 240px
	font-size 26px
	text-align left
	line-height 1.3
	margin-right 50px
	p
		font-family t-0
	strong
		font-family t-1
		font-weight normal

.b32-input
	font-size 15px
	placeholder(white,t-9)
	width 45%
	height 40px
	input
		background transparent
		text-align center
		border none
		color white
		border-bottom 1px solid white
		width 100%
		height 100%

@media screen and (max-width 960px)
	.b32-texto
		margin-right 20px

	.b32-input
		width 40%

	.b32
		button
			margin-left 20px

@media screen and (max-width 713px)
	.b32
		button
			margin-top 20px
			margin-left auto
			margin-right auto
			display block


@media screen and (max-width 600px)
	.b32
		margin-top 15px
	.b32-texto
		margin-right auto
		text-align center
	.b32-input
		width 90%
		margin auto
		margin-top 20px
