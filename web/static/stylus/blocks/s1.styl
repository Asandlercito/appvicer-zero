
@keyframes bajar
	0%
		transform translateY(0px)
	25%
		transform translateY(5px)

	50%
		transform translateY(10px)

	75%
		transform translateY(5px)

	100%
		transform translateY(0px)

.owl-dot,
.owl-next,
.owl-prev
	cursor pointer

.b1
	position relative
	.wancho
		position relative
		z-index: 1
	.bx-controls
		position absolute
		text-align right
		left 0
		top  0
		width 100%
		height  100%
		font-size: 0
		z-index: 200
		visibility hidden
		box-sizing border-box
		padding-right 20px
		max-width 1100px
		right 0
		margin auto
		&:before
			content ""
			width 0
			height 100%
			display inline-block
			vertical-align middle
		.bx-pager
			width 30px
			display inline-block
			vertical-align middle
			position relative
			visibility visible
			bottom inherit
			text-align center
			padding 0
		.bx-pager-item
			margin 0
			margin-top: 30px
			&:first-child
				margin-top 0
			a
				background-color: #fff
				&:hover, &.active
					transform scale(1.8)
					background white
		.bx-pager.bx-default-pager a
			width  10px
			height 10px
			border-radius 10px
	.g-bntdos
		font-size 16px
		padding 0 40px
		line-height 42px
		transition-all()
		&:hover
			background c-2
			color white
			border 1px solid transparent

.b1-item
	background-position center center
	background-size cover
	background-repeat no-repeat
	position relative
	img
		display block
		height auto
		max-width 100%

	&.active
		.b1-texto
			h3, p, .b1-bnt
				opacity 1
				transform translateX(0%)

		.b1-parrafo
			&:after
				opacity 1
				transform translateX(0%)


.b1-flecha
	width 56px
	height: 56px
	left 0
	right 0
	line-height: 56px
	position absolute
	text-align center
	color #fff
	top 54%
	font-size 56px
	z-index: 200
	display block
	bottom -130px
	&:before
		content "\e91d"
		font-family icomoon
		display inline-block
		animation bajar 1.2s infinite
	// &:hover
	// 	background #fff
	// 	color c-1
	// 	&:before
	// 		animation-play-state paused


.b1-span
	border 2px solid white
	max-width 200px
	height 52px
	display block
	position absolute
	border-radius 30px
	bottom 27%
	left 0
	right 0
	color white
	line-height 52px
	text-align center

.b1-texto
	display table-cell
	vertical-align middle
	max-width 530px
	width 100%
	height 531px
	h3
		font-family t-3
		font-size 62px
		color #004998
		line-height 65px
		margin-bottom 25px
		opacity 0
		transform translateX(100%)
		transition all 1s
	p
		font-family t-0
		font-size 26px
		color #004998
		margin 0
		line-height 42px
		opacity 0
		transform translateX(100%)
		transition all 1s
		transition-delay .25s

.b1-parrafo
	position relative
	&:after
		content ""
		width 50px
		height 2px
		background-color #5b5b5f
		position absolute
		bottom -5px
		left 0
		opacity 0
		transform translateX(100%)
		transition all 1s
		transition-delay 1s

.b1-bnt
	margin-top 30px
	opacity 0
	transform translateX(100%)
	transition all 1s
	transition-delay .50s


@media screen and (max-width:960px)
	.b1-texto
		height 400px
		max-width 440px

		h3
			font-size 45px
			line-height 50px

		p
			font-size 18px
			line-height 25px
			
	.b1-flecha
		display none
		
@media screen and (max-width:480px)
	.b1 .bx-controls .bx-pager.bx-default-pager a,
	.b1 .bx-controls .bx-pager,
	.b2-item:hover .b2-capa:before,
	.b2-item:hover .b2-capa:after
		display none

	.b1 .wancho
		width 240px
		text-align center

	.b1-parrafo:after
		right 0
		margin auto

	.b1-texto
		height 225px
		max-width 225px

		h3
			font-size 25px
			line-height 30px
			margin-bottom 12px

		p
			font-size 14px
			line-height 16px

		.g-bntdos
			font-size 16px
			line-height 30px
			margin auto
			padding 0 20px

		.b1-bnt
			margin-top 20px

